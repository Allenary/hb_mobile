<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".OutTransactionActivity" >

    <Button
        android:id="@+id/bAddCathegory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tSelectedCathegory"
        android:layout_alignParentRight="true"
        android:onClick="ShowAddCathegoryScreen"
        android:text="Add cathegory" />

    <Button
        android:id="@+id/bAddOutTransaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bAddCathegory"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="61dp"
        android:layout_marginLeft="25dp"
        android:onClick="addOutTransaction"
        android:text="Button" />

    <TextView
        android:id="@+id/tTransactionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bAddOutTransaction"
        android:layout_alignLeft="@+id/tSelectedCathegory"
        android:layout_marginBottom="16dp"
        android:text="datetime" />

    <TextView
        android:id="@+id/tSelectedCathegory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:text="@string/hello_world" />

    <EditText
        android:id="@+id/tTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bAddCathegory"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/tSelectedCathegory"
        android:ems="10" />

    <EditText
        android:id="@+id/tTotalCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/bAddCathegory"
        android:layout_below="@+id/tTitle"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/lTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tTotalCount"
        android:layout_alignLeft="@+id/tSelectedCathegory"
        android:text="Title" />

</RelativeLayout>